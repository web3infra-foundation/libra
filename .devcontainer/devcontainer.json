{
  "name": "r2cn - Codespaces",
  "dockerFile": "Dockerfile",
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "tamasfe.even-better-toml",
        "ms-vscode.cpptools"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "terminal.integrated.shell.linux": "/usr/bin/bash",
        "files.exclude": {
          "**/CODE_OF_CONDUCT.md": true,
          "**/LICENSE": true
        }
      }
    }
  },
  "hostRequirements": {
    "cpus": 16,
    "memory": "64gb",
    "storage": "128gb"
  }
}